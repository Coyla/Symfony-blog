
{{ form_start(form, {'action': path('comment_new'), 'method': 'POST'}) }}
<div class="card">
    <div class="card-header">
        Submit comment
    </div>
    <div class="card-block">
        <input hidden type="text"  name="post-id" id="post-id" value="{{ post.id }}">
        <div class="form-group row">
            <label for="" class="col-sm-2 col-form-label">Title</label>
            <div class="col-sm-10">
                {{ form_widget(form.username,{ 'attr': {'class':'form-control'}}) }}
            </div>
        </div>
        <div class="form-group row">
            <label for="" class="col-sm-2 col-form-label">Content</label>
            <div class="col-sm-10">
                {{ form_widget(form.message, { 'attr': {'class': 'form-control','rows': '14'} }) }}        </div>
        </div>
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-10">
                <input type="submit" class="btn btn-primary" value="Submit" />
            </div>
        </div>
    </div>
</div>
{{ form_end(form) }}
