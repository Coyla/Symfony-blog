{% extends 'DEVBlogBundle:Admin:admin_template.html.twig' %}

{% block admin_body %}
    <div class="posts-list">
        <div class="row">
            {% for post in posts %}
            <div class="col-sm-6 col-lg-4 col-md-4">
                <div class="card card-default">
                    <div class="card-header">
                        {{ post.title }}
                    </div>
                    <div class="card-block">
                        <div class="date">
                            <p class="card-text">
                                {% if post.publishedAt != null %}
                                    <small class="text-muted">published date : {{ post.publishedAt.date|date('Y-m-d') }}</small>
                                {% else %}
                                    <small class="text-muted">not published yet</small>
                                {% endif %}
                            </p>
                        </div>
                        {{ post.content | slice(0,100) }}
                    </div>
                    <div class="card-footer text-muted">
                        {% if post.publishedAt == null %}
                            <a class="btn btn-primary" type="button" href= "{{ path('post_publish',{'id': post.id}) }}"
                               value="{{ post.id }}"> Publish </a>
                        {% else %}
                        <a class="btn btn-primary disabled" type="button" href= "{{ path('post_publish',{'id': post.id}) }}"
                           value="{{ post.id }}"> Publish </a>
                        {% endif %}

                    </div>
                </div>
            </div>

            {% endfor %}
        </div>
    </div>
{% endblock %}
