{% extends 'DEVBlogBundle:Viewer:viewer_template.html.twig' %}

{% block viewer_body %}
    viewer
    {% for post in posts %}
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">
                    <a href="admin/posts/{{ post.id }}">{{ post.title }}</a>
                </h3>
                <i> date publication : {{ post.publishedAt.date }}</i>
            </div>
            <div class="panel-body">
                {{ post.content|slice(0,100)}}
            </div>
        </div>
    {% endfor %}
{% endblock %}
